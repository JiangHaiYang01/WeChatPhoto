<resources>

    <style name="custom_app_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="custom_larger" parent="custom_app_theme">
        <item name="android:actionBarStyle">@style/custom_larger_bg</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 全屏 -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="custom_larger_bg" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>


</resources>